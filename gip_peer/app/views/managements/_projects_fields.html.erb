<p>
	<%= f.label :question_type, 'Type of Question' %><br/>
	<%= f.select :question_type, options_for_select([['Radio', 'Radio'], ['Checkbox', 'Checkbox'], ['Text', 'Text'],['Boolean','Boolean']], :selected => f.object.question_type) %>
</p>

<p>
	<%= f.label :question, "Question" %><br/>
	<%= f.text_area :question, :rows => 3 %><br/>
	<%= f.label :matrix, "Matrix?" %>
	<%= f.check_box :matrix %> <br/>
	<%= f.link_to_remove "Delete" %>
</p>
<p>
	<ul>
 <%= f.fields_for :qoptions do |builder| %>
	    	<%= render "answer_fields", :f => builder %>
	  	<% end %>
  <li><%= f.link_to_add "Add a answer", :qoptions %></li>
	</ul>
</p>

